<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="#f5f5f5"
    tools:context="leaflet.miaoa.qmsh.leaflet.ui.personaluser.mine.ContactCustomerServiceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fafafa">

        <ImageView
            android:id="@+id/iv_contact_customer_service_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系客服"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_contact_customer_service_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/seller_home_uncheck" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="#333333"
        android:text="请输入您遇到的问题"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/seller_my_feedback_conner">

        <EditText
            android:id="@+id/problems"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:hint="请再次输入您在使用中遇到的问题，尽量描述详细，我们将尽快解决问题，竭诚感谢您对我们产品的支持！"
            android:textSize="14sp"
            android:textColorHint="#999999"
            android:textColor="#333333"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_contact_customer_service_call"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_button_conner"
        android:text="电话：0512-88869359"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_conner"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:gravity="center"/>
</LinearLayout>
