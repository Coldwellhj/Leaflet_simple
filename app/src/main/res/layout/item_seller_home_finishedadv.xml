<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/fl"
        android:layout_width="300dp"
        android:layout_height="171dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
           />
        <ImageView

            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/adv_finished"
            />
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_isVideo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/isvideo"
            android:visibility="gone"/>
    </RelativeLayout>

        <RelativeLayout
            android:background="@color/text_above_img"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fl"
        android:layout_width="300dp"
        android:background="@drawable/personal_adv_button_bg"
        android:layout_height="51dp">
        <ImageView
            android:id="@+id/iv_money"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/gold"/>
        <TextView
            android:layout_toRightOf="@+id/iv_money"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_money"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="9sp"/>
        <ImageView
            android:id="@+id/iv_alive"
            android:layout_toRightOf="@+id/tv_money"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/alive"/>
        <TextView
           android:layout_toRightOf="@+id/iv_alive"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_playback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/republish_adv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/normal_confirm_bg"
            android:layout_weight="1"
            android:text="再次发布"
            android:gravity="center"
            android:textColor="@color/goods_red"
            android:textSize="13sp"
            android:layout_width="70dp"
            android:layout_height="36dp" />
        <TextView
            android:layout_toLeftOf="@+id/republish_adv"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:id="@+id/tv_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"/>
        
    </RelativeLayout>

</RelativeLayout>
