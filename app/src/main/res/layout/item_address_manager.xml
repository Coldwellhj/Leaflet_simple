   <RelativeLayout
       android:id="@+id/rl1"
       android:layout_width="match_parent"
       android:layout_height="80dp">
   <TextView
       android:layout_marginTop="10dp"
       android:id="@+id/tv_name_number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/ischoose"
       android:layout_toLeftOf="@+id/rl_edit"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="10dp"
       android:textSize="14sp"
       android:textColor="@color/duck_black"/>
   <TextView
       android:id="@+id/tv_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/ischoose"
       android:layout_below="@+id/tv_name_number"
       android:layout_marginTop="5dp"
       android:layout_toLeftOf="@+id/rl_edit"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="10dp"
       android:textColor="@color/color_tv_cFormerPrice"
       android:layout_marginBottom="5dp"
       android:textSize="12sp"
       />
   </RelativeLayout>
   <View
       android:id="@+id/v1"
       android:layout_below="@+id/rl1"
       android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
      android:background="@color/gray"/>
   <RelativeLayout
      android:layout_below="@+id/v1"
       android:layout_width="match_parent"
       android:layout_height="40dp">
      <ImageView
          android:id="@+id/iv_choose_default"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="15dp"
          android:layout_centerVertical="true"
          android:src="@mipmap/checked"/>
      <TextView
          android:id="@+id/set_default"
          android:layout_toRightOf="@+id/iv_choose_default"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/color_tv_cFormerPrice"
          android:layout_marginLeft="10dp"/>
      <LinearLayout
          android:id="@+id/delete_address"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="5dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@mipmap/delete_address"/>
         <TextView
             android:layout_marginLeft="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_tv_cFormerPrice"
             android:textSize="12sp"
             android:text="删除"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/edit_address"
          android:layout_toLeftOf="@+id/delete_address"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dp"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@mipmap/edit_address"/>
         <TextView
             android:layout_marginLeft="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_tv_cFormerPrice"
             android:textSize="12sp"
             android:text="编辑"/>
      </LinearLayout>
   </RelativeLayout>
</RelativeLayout>