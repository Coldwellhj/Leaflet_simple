<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/iv_home_goods"

        android:scaleType="centerCrop"
        android:layout_width="178dp"
        android:layout_height="178dp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="8dp"
        android:layout_width="178dp"

        android:padding="10dp"

        android:layout_height="wrap_content"
        android:textColor="@color/color_tv_name"

        android:text="dafasfasdfasdfj航卡拉胶噶三季度拉上来快乐圣诞节发送"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_introduce"
        android:layout_marginTop="3dp"
        android:layout_width="178dp"

        android:layout_marginRight="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingRight="15dp"

        android:layout_height="30dp"
        android:textColor="@color/color_tv_cFormerPrice"
        android:text="dafasfasdfasdfj航卡拉胶噶三季度拉上来快乐圣诞节发送"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"

        android:layout_marginRight="16dp"
        android:layout_width="178dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/renmingbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_tv_name"
            android:layout_marginLeft="16dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="¥"/>
        <TextView
            android:id="@+id/tv_cNowPrice"
            android:layout_toRightOf="@+id/renmingbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_tv_cNowPrice"
            android:text="          "/>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_cFormerPrice"
            android:layout_toRightOf="@+id/tv_cNowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_tv_cFormerPrice"
            android:textSize="10sp"
            android:text=""/>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_cSales"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_tv_cFormerPrice"
            android:textSize="10sp"
            android:text="已售1000"/>
    </RelativeLayout>
</LinearLayout>