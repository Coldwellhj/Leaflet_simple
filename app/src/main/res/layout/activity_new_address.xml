<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leaflet.miaoa.qmxh.leaflet_simple.ui.personaluser.mall.payfor.NewAddressActivity">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="60dp"


            android:layout_height="48dp">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="新建收货地址"/>
        <RelativeLayout
            android:id="@+id/delete_address"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone">
            <TextView
               android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/rl_save_Address"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="48dp">

        <TextView

            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pay_button_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="保存地址"/>
    </RelativeLayout>
    <ScrollView
        android:layout_above="@+id/rl_save_Address"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="收货人："
                android:textColor="@color/description"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/et_address_name"
                android:layout_toRightOf="@+id/tv1"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"

                android:textColor="@color/duck_black"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="手机号码："
                android:textColor="@color/description"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/et_address_Number"
                android:layout_toRightOf="@+id/tv2"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"

                android:textColor="@color/duck_black"
               />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray"
           />
        <RelativeLayout
            android:id="@+id/rl_address_area"
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="所在地区："
                android:textColor="@color/description"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_address_area"
                android:layout_toRightOf="@+id/tv3"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/duck_black"
                android:text=""/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/turn_right" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="详细地址："
                android:textColor="@color/description"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/et_address_detail"
                android:layout_toRightOf="@+id/tv4"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:minEms="5"
                android:textColor="@color/duck_black"
               android:hint="街道、楼盘等,不少于5个字"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="设为默认地址："
                android:textColor="@color/description"
                android:textSize="14sp" />
            <ToggleButton
                android:id="@+id/mBalanceTogBtn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/mydefaultaddress"
                android:minWidth="48dp"
                android:minHeight="30dp"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            />
    </LinearLayout>




    </ScrollView>
</RelativeLayout>
