<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <RelativeLayout
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/iv_modify_phonenumber_back"
            android:layout_width="48dp"
            android:layout_height="48dp">
        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改支付密码"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/seller_my_feedback_conner">

        <EditText
            android:id="@+id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="输入新的支付密码"
            android:textColorHint="#999999"
            android:background="@null"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/seller_my_feedback_conner">

        <EditText
            android:id="@+id/newPhoneNum"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="手机号"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_modify_phonenumber_getnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="获取验证码"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/tv_modify_phonenumber_getnum"
            android:background="#333333" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/seller_my_feedback_conner">

        <EditText
            android:id="@+id/et_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="验证码"
            android:textColorHint="#999999"
            android:background="@null"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_conner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="确  定"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
</LinearLayout>
