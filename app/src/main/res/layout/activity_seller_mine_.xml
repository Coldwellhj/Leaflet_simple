<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="leaflet.miaoa.qmxh.leaflet_simple.ui.personaluser.mine.Personal_mine_Fragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/UserName"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="用户昵称"/>
        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="18dp"

            android:layout_centerInParent="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/setting"/>
        </RelativeLayout>

    </RelativeLayout>
    <leaflet.miaoa.qmxh.leaflet_simple.ui.widget.ZQImageViewRoundOval
        android:id="@+id/iv_head"
        android:layout_marginTop="12dp"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:src="@mipmap/head_icon">
    </leaflet.miaoa.qmxh.leaflet_simple.ui.widget.ZQImageViewRoundOval>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal"
        android:background="@drawable/personal_mine_bg"
        android:layout_height="66dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/value_of_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="余额"/>


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@color/white"/>
        <LinearLayout
            android:id="@+id/withdraw_cash"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/withdraw_cash"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="提现"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_marginRight="21dp"
        android:background="@drawable/personal_mine_top_bg"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/message"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="消息"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv"
            android:layout_marginEnd="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/spread" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_adv_design"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:background="@drawable/personal_mine_normal_bg">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv1"
            android:text="广告设计服务" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/spread" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_feed_back"
        android:layout_marginLeft="21dp"
        android:layout_width="match_parent"
        android:layout_marginRight="21dp"
        android:background="@drawable/personal_mine_normal_bg"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/feed_back"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="反馈"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/spread"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_help"
        android:layout_marginLeft="21dp"
        android:layout_width="match_parent"
        android:layout_marginRight="21dp"
        android:background="@drawable/personal_mine_button_bg"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@mipmap/custom_service"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="联系客服"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/spread"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_switch_seller"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/normal_bg"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:src="@drawable/switch_seller"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="切换为用户"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/iv5"
                android:layout_marginEnd="13dp"
                android:scaleType="fitXY"
                android:src="@drawable/spread" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
