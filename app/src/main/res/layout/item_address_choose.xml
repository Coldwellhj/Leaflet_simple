<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   <ImageView
       android:layout_marginLeft="10dp"
       android:layout_centerVertical="true"
       android:id="@+id/ischoose"
       android:layout_width="21dp"
       android:layout_height="21dp"
       android:visibility="gone"
       android:src="@mipmap/ischoose"/>
   <RelativeLayout
       android:layout_centerVertical="true"
       android:id="@+id/rl_edit"
       android:layout_marginRight="13dp"
       android:layout_alignParentRight="true"
       android:layout_width="40dp"
       android:layout_height="32dp">
      <ImageView
          android:layout_centerInParent="true"
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:src="@mipmap/edit"/>
   </RelativeLayout>
   <View
       android:layout_centerInParent="true"
       android:layout_toLeftOf="@+id/rl_edit"
       android:layout_marginRight="5dp"
       android:layout_width="0.5dp"
       android:layout_height="16dp"
       android:background="@color/gray"
       />
   <TextView
       android:layout_marginTop="10dp"
       android:id="@+id/tv_name_number"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/ischoose"
       android:layout_toLeftOf="@+id/rl_edit"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="10dp"
       android:textSize="14sp"
       android:textColor="@color/duck_black"/>
   <TextView
       android:id="@+id/tv_address"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/ischoose"
       android:layout_below="@+id/tv_name_number"
       android:layout_marginTop="5dp"
       android:layout_toLeftOf="@+id/rl_edit"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="10dp"
       android:textColor="@color/color_tv_cFormerPrice"
       android:layout_marginBottom="5dp"
       android:textSize="12sp"
       />
</RelativeLayout>